<section class="container destaque">
  <section class="busca">
    <h2>Busca</h2>
    <form action="http://www.google.com.br/search" id="form-busca">
      <input type="search" name="q" id="q">
      <input type="image" src="<%=asset_path("busca.png")%>" class="lupa" alt="Buscar">
    </form>
  </section>

  <section class="menu-departamentos">
    <h2>Departamentos</h2>

    <nav>
      <ul>
        <li>
          <a href="#">Blusas e Camisas</a>
          <ul>
            <li><a href="#">Manga curta</a></li>
            <li><a href="#">Manga comprida</a></li>
            <li><a href="#">Camisa social</a></li>
            <li><a href="#">Camisa casual</a></li>
          </ul>
        </li>
        <li><a href="#">Calças</a></li>
        <li><a href="#">Saias</a></li>
        <li><a href="#">Vestidos</a></li>
        <li><a href="#">Sapatos</a></li>
        <li><a href="#">Bolsas e Carteiras</a></li>
        <li><a href="#">Acessórios</a></li>
      </ul>
    </nav>
  </section>

  <img src="<%=asset_path("destaque-home.png")%>" alt="Promoção: Big City Night">
</section>

<section class="container paineis">
  <section class="painel novidades">
    <h2>Novidades</h2>
    <ol>

	    <% @news.each do |p| %>
	      <li>
	        <a href="<%="/produto/#{p.url_slug}"%>">
	          <figure>
	            <img src="<%=asset_path("produtos/miniaturas/#{p.image_path}")%>" alt="<%=p.name%>">
	            <figcaption><%="#{p.name} por #{p.price}"%></figcaption>
	          </figure>
	        </a>
	      </li>
	    <% end %>
    </ol>

    <button type="button">Mostra mais</button>
  </section><!-- fim das novidades -->

  <section class="painel mais-vendidos">
    <h2>Mais Vendidos</h2>

    <ol>

    	<% @best_sellers.each do |p| %>
	      <li>
	        <a href="<%="/produto/#{p.url_slug}"%>">
	          <figure>
	            <img src="<%=asset_path("produtos/miniaturas/#{p.image_path}")%>" alt="<%=p.name%>">
	            <figcaption><%="#{p.name} por #{p.price}"%></figcaption>
	          </figure>
	        </a>
	      </li>
	    <% end %>  

    </ol>

    <button type="button">Mostra mais</button>
  </section><!-- fim dos mais vendidos -->

</section>

<%= javascript_include_tag "home" %>