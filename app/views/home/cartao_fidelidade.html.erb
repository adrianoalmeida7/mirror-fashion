<% content_for :css_extra do %>
	<%= stylesheet_link_tag    "ajuda", :media => "all" %>
	<%= stylesheet_link_tag    "bootstrap", :media => "all" %>
<% end %>

<div class="container ajuda">
	<h1>Solicite aqui seu cart√£o fidelidade</h1>

	<form class="col-sm-8 col-lg-9" method="POST" action="/">
			<style>
			.form-control:invalid {
				border: 1px solid #cc0000;
			}
			</style>
			<div class="row">
				<fieldset class="col-md-6">
					<legend>Dados pessoais</legend>

					<div class="form-group">
						<label for="nome">Nome completo</label>
						<input type="text" class="form-control" id="nome" name="nome" autofocus required>
					</div>

					<div class="form-group">
						<label for="email">Email</label>

						<div class="input-group">
							<span class="input-group-addon">@</span>
							<input type="email" class="form-control" id="email" placeholder="email@exemplo.com" name="email">
						</div>
					</div>

					<div class="checkbox">
						<label>
							<input type="checkbox" value="sim" name="spam" checked>
							Quero receber e-mails da Mirror Fashion
						</label>
					</div>
				</fieldset>
			</div>

			<button type="submit" class="btn btn-primary btn-lg pull-right">
				<span class="glyphicon glyphicon-thumbs-up"></span>
				Enviar
			</button>
		</form>
</div>